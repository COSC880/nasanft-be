    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:${input:port}",
            "webRoot": "${workspaceFolder}"
        }
    ],
    "inputs": [
        {
            "id": "port",
            "description": "Port Express Server is running on",
            "default": "3000",
            "type": "promptString"
        }
    ]
}
